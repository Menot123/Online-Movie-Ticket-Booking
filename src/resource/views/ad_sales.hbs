<script>
    const form__update = document.getElementById("form__update");
    const img__close = document.getElementById("img__close");
    const exampleModal = document.getElementById("exampleModal");
    const btnAccept = document.getElementById("accept");
    const btnCancel = document.getElementById("cancel");
    const inputSale = document.getElementById("inputSale");
    const inputDetailSale = document.getElementById("inputDetailSale");
    const inputPercentSale = document.getElementById("inputPercentSale");
    const btnUpdate = document.getElementById("btn-update");

    const form__add = document.getElementById("form__add");
    const inputSaleAdd = document.getElementById("inputSaleAdd");
    const inputDetailSaleAdd = document.getElementById("inputDetailSaleAdd");
    const inputPercentSaleAdd = document.getElementById("inputPercentSaleAdd");
    const btnAdd = document.getElementById("btn-add");

    const blurBg = document.querySelector('#blur')

    document.getElementById("img__admin").addEventListener('click', () => {
        window.location.href = '/admin'
    })

    function add() {
        form__add.style.display = 'block';
        blurBg.style.display = 'block';
        const url = `http://localhost:3000/admin/api/add-sale`

        btnAdd.addEventListener('click', (e) => {
            form__add.addEventListener('submit', (e) => {
                e.preventDefault();
            })
            e.preventDefault()
            fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    tenkhuyenmai: inputSaleAdd.value,
                    chitiet: inputDetailSaleAdd.value,
                    giamgia: inputPercentSaleAdd.value
                })
            })
                .then(response => {
                    return response.json();
                })
                .then(data => {
                    if (data.status > 0) {
                        form__add.style.display = 'none'
                        showAlertSuccess(`Thêm thông tin khuyến mãi thành công!`)
                    } else {
                        form__add.style.display = 'none'
                        showAlertFail(`Thêm thông tin khuyến mãi thất bại!`)
                    }
                })
                .catch(error => {
                    console.log(error)
                });

        })
    }

    function update(id) {
        form__update.style.display = 'block';
        blurBg.style.display = 'block';
        const url = `http://localhost:3000/admin/api/get-sale/${id}`
        fetch(url, {
            method: 'get',
            headers: {
                'Content-Type': 'application/json'
            }
        })
            .then(response => {
                return response.json();
            })
            .then(data => {
                if (data.result) {
                    inputSale.value = data.result[0].tenkhuyenmai
                    inputDetailSale.value = data.result[0].chitiet
                    inputPercentSale.value = data.result[0].giamgia
                    btnUpdate.addEventListener('click', (e) => {
                        form__update.addEventListener('submit', (e) => {
                            e.preventDefault();
                        })
                        e.preventDefault()
                        fetch(`http://localhost:3000/admin/api/update-sale/${id}`, {
                            method: 'PUT',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                tenkhuyenmai: inputSale.value,
                                chitiet: inputDetailSale.value,
                                giamgia: inputPercentSale.value
                            })
                        })
                            .then(response => {
                                return response.json();
                            })
                            .then(data => {
                                if (data.status > 0) {
                                    form__update.style.display = 'none'
                                    showAlertSuccess(`Cập nhật thông tin khuyến mãi ${data.id} thành công!`)
                                } else {
                                    form__update.style.display = 'none'
                                    showAlertFail(`Cập nhật thông tin khuyến mãi ${data.id} thất bại!`)
                                }
                            })
                            .catch(error => {
                                console.log(error)
                            });
                    })
                }
            })
            .catch(error => {
                console.log(error)
            });
    }

    blurBg.addEventListener('click', () => {
        form__update.style.display = 'none';
        blurBg.style.display = 'none';
        form__add.style.display = 'none';
        console.log("blur")
    })

    function closeModal() {
        blurBg.style.display = 'none';
        form__update.style.display = 'none';
        form__add.style.display = 'none';
        console.log("img")
    }

    function deleteSale(id) {
        exampleModalLabel.innerText = `Bạn có chắc muốn xóa khuyến mãi ${id} ?`
        btnAccept.addEventListener('click', () => {
            const url = `http://localhost:3000/admin/api/delete-sale/${id}`
            fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
                .then(response => {
                    return response.json();
                })
                .then(data => {
                    if (data.status) {
                        document.getElementById('exampleModal').classList.add('d-none');
                        document.querySelector('.modal-backdrop').classList.add('d-none');
                        showAlertSuccess(`<span><strong>Xóa khuyến mãi ${data.id} thành công!</strong></span>`)
                    } else {
                        showAlertFail(`<span><strong>Có lỗi xảy ra khi xóa khuyến mãi ${data.id}</strong></span>`)
                    }
                })
                .catch(error => {
                    console.log(error)
                });
        })

    }

    function showAlertSuccess(msg) {
        const flash_success = document.getElementById("flash-alert-success");
        flash_success.innerHTML = `${msg}`;
        flash_success.classList.remove('d-none');

        setTimeout(function () {
            flash_success.classList.add('d-none');
            window.location.reload()
        }, 1300);
    }

    function showAlertFail(msg) {
        const flash_fail = document.getElementById("flash-alert-danger");
        flash_fail.innerHTML = `${msg}`;
        flash_fail.classList.remove('d-none');

        setTimeout(function () {
            flash_fail.classList.add('d-none');
            window.location.reload()
        }, 1300);
    }
</script>

