    <div class="container">

        <form id="form__add">
            <div class="inside">
                <img onclick="closeModal()" id="img__close" src="/img/close.png" alt="close">
                <h1>Thêm khuyến mãi</h1>
                <div class="mb-3">
                    <label for="inputSaleAdd" class="form-label">Tên khuyến mãi</label>
                    <input type="text" class="form-control" id="inputSaleAdd" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="inputDetailSaleAdd" class="form-label">Chi tiết khuyến mãi</label>
                    <input type="text" class="form-control" id="inputDetailSaleAdd">
                </div>
                <div class="mb-3">
                    <label for="inputPercentSaleAdd" class="form-label">Giảm giá (%)</label>
                    <input type="text" class="form-control" id="inputPercentSaleAdd">
                </div>
                <button id="btn-add" class="btn btn-primary float-end">Thêm</button>
            </div>
        </form>

        <form id="form__update">
            <div class="inside">
                <img onclick="closeModal()" id="img__close" src="/img/close.png" alt="close">
                <h1>Chỉnh sửa khuyến mãi</h1>
                <div class="mb-3">
                    <label for="inputSale" class="form-label">Tên khuyến mãi</label>
                    <input type="text" class="form-control" id="inputSale" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="inputDetailSale" class="form-label">Chi tiết khuyến mãi</label>
                    <input type="text" class="form-control" id="inputDetailSale">
                </div>
                <div class="mb-3">
                    <label for="inputPercentSale" class="form-label">Giảm giá (%)</label>
                    <input type="text" class="form-control" id="inputPercentSale">
                </div>
                <button id="btn-update" class="btn btn-primary float-end">Cập nhật</button>
            </div>
        </form>

        <table id="table_sale" class="table table-dark mt-4">
            <thead>
                <tr>
                    <th scope="col">Mã khuyến mãi</th>
                    <th scope="col">Tên khuyến mãi</th>
                    <th scope="col">Chi tiết</th>
                    <th scope="col">Giảm (%)</th>
                    <th scope="col">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr>
                    <th scope="row">{{this.makhuyenmai}}</th>
                    <td>{{this.tenkhuyenmai}}</td>
                    <td>{{this.chitiet}}</td>
                    <td>{{this.giamgia}}</td>
                    <td><span id="btn__update" style="color: aqua;" onclick="update({{this.makhuyenmai}})">Chỉnh
                            sửa</span> l <span class="btn__delete" style="color: aqua;"
                            onclick="deleteSale({{this.makhuyenmai}})" data-bs-toggle="modal"
                            data-bs-target="#exampleModal">Xóa</span></td>
                </tr>
                {{/each}}

            </tbody>
        </table>
        <button class="btn btn-success" onclick="add()">Thêm khuyến mãi</button>

    </div>

