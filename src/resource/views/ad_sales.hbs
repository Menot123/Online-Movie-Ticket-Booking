    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Bạn có chắc muốn xóa khuyến mãi này</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Thao tác này sẽ không được hoàn tác
                </div>
                <div class="modal-footer">
                    <button id="cancel" type="button" class="btn btn-primary" data-bs-dismiss="modal">Hủy bỏ</button>
